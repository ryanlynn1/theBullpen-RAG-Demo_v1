# Azure OpenAI Configuration
OPENAI_API_TYPE=azure
OPENAI_API_VERSION=2024-02-01-preview
AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_EMBED_MODEL=text-embedding-ada-002
AZURE_GPT4O_DEPLOYMENT=gpt-4o-mini

# Azure AI Search Configuration
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_KEY=your-search-admin-key
AZURE_SEARCH_INDEX=bullpen-index

# Azure Blob Storage Configuration (for document ingestion)
AZURE_BLOB_CONN_STR=DefaultEndpointsProtocol=https;AccountName=youraccount;AccountKey=yourkey;EndpointSuffix=core.windows.net
AZURE_BLOB_CONTAINER=demo-docs

# Perplexity API Configuration (for external search)
PERPLEXITY_API_KEY=your-perplexity-api-key

# Frontend Configuration (optional)
BACKEND_URL=http://localhost:8000 